{
  "name": "mamba-sdk",
  "version": "3.0.0-alpha",
  "description": "SDK for developing in the Stone POS Mamba environment",
  "repository": "https://github.com/stone-payments/pos-mamba-sdk.git",
  "author": "Stone Payments",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "lint": "eslint '{tools,packages}/**/*.{js,ts,tsx}' --quiet --fix",
    "lint:css": "stylelint packages/**/*.{css,html,svelte,svg}"
  },
  "dependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "eslint": ">=6.0.0",
    "husky": ">=4",
    "lerna": "^3.22.1",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "linters": {
      "*.{html,svelte}": [
        "stylelint --fix",
        "git add"
      ],
      "*.js": [
        "prettier --write",
        "git add"
      ],
      "*.{pcss,css}": [
        "prettier --write",
        "stylelint --fix",
        "git add"
      ]
    }
  },
  "devDependencies": {
    "lint-staged": ">=10"
  }
}
