{
  "name": "mamba-web",
  "version": "1.0.0",
  "description": "Web related Mamba libraries",
  "author": "Stone Payments - Mamba Team",
  "license": "Apache-2.0",
  "repository": "https://github.com/stone-payments/pos-mamba-web.git",
  "scripts": {
    "start": "bolt w @mamba/website start",
    "build": "bolt ws build",
    "build:components": "bolt ws build --only-fs \"packages/components/**\"",
    "build:css": "bolt ws build --only-fs \"packages/css-packs/**\"",
    "build:libs": "bolt ws build --only-fs \"packages/{utils,native}/**\"",
    "delete:modules": "rm -rf \"node_modules\" \"./**/node_modules\"",
    "link:packages": "bolt ws exec --only-fs \"packages/**\" -- yarn link",
    "lint": "npm run lint:js; npm run lint:css",
    "lint:js": "eslint \"*.js\" \"{tools,packages,website}/**/*.{js,html,svelte}\"",
    "lint:css": "stylelint \"packages/**/*.{css,scss,svelte,html}\"",
    "format": "npm run format:css; npm run format:js",
    "format:js": "prettier --loglevel silent --write \"*.js\" \"{tools,packages,website}/**/*.js\" && eslint --fix \"*.js\" \"{tools,packages,website}/**/*.{js,html,svelte}\"",
    "format:css": "prettier --loglevel silent --write \"packages/**/*.{css,scss}\" && stylelint --fix \"packages/**/*.{css,scss,svelte,html}\"",
    "test": "bolt ws test"
  },
  "bolt": {
    "workspaces": [
      "packages/cli",
      "packages/utils",
      "packages/native",
      "packages/css-packs/*",
      "packages/components/*",
      "website"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{html,svelte}": [
      "eslint --fix",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{scss,css}": [
      "prettier --write",
      "stylelint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "^7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/plugin-proposal-decorators": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-stage-3": "^7.0.0-beta.46",
    "@gen/rollup-plugin-generate-html": "^0.1.1",
    "@mapbox/stylelint-processor-arbitrary-tags": "^0.2.0",
    "autoprefixer": "^8.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^22.4.3",
    "babel-loader": "^8.0.0-beta",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.4",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "file-loader": "^1.1.11",
    "globby": "^8.0.1",
    "html-minifier": "^3.5.15",
    "husky": "^0.15.0-rc.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.1.0",
    "mini-css-extract-plugin": "^0.4.0",
    "mini-html-webpack-plugin": "^0.2.3",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.0",
    "optimize-css-assets-webpack-plugin": "^4.0.1",
    "postcss-loader": "^2.1.5",
    "postcss-scss": "^1.0.5",
    "prettier": "^1.12.1",
    "quickenv": "^0.0.5",
    "raw-loader": "^0.5.1",
    "resolve-url-loader": "^2.3.0",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-fill-html": "^1.1.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.3.0",
