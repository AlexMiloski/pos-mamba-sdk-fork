{
  "name": "mamba",
  "version": "6.0.0",
  "description": "Plain webpack 4 Boilerplate with Babel, SASS and lodash on board",
  "author": "Stone Payments - Mamba Team",
  "license": "Apache-2.0",
  "repository": "https://github.com/stone-payments/pos-mamba-web.git",
  "bolt": {
    "workspaces": [
      "packages/utils",
      "packages/native",
      "packages/css-packs/*",
      "packages/components/*"
    ]
  },
  "scripts": {
    "start": "cd website; npm run start; cd ..;",
    "build": "bolt ws build",
    "delete:modules": "rm -rf 'node_modules' './**/node_modules'",
    "lint": "npm run lint:js; npm run lint:css",
    "lint:js": "eslint '*.js' '{tools,packages,website}/**/*.{js,html,svelte}'",
    "lint:css": "stylelint 'packages/**/*.{css,scss}'",
    "format": "npm run format:css; npm run format:js",
    "format:js": "prettier --loglevel silent --write '*.js' '{tools,packages,website}/**/*.js' && eslint --fix '*.js' '{tools,packages,website}/**/*.{js,html,svelte}'",
    "format:css": "prettier --loglevel silent --write 'packages/**/*.{css,scss}' && stylelint --fix 'packages/**/*.{css,scss}'",
    "test": "bolt ws test",
    "postinstall": "cd website; yarn"
  },
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.46",
    "@babel/core": "7.0.0-beta.46",
    "@babel/node": "^7.0.0-beta.46",
    "@babel/plugin-proposal-class-properties": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.0.0-beta.46",
    "@babel/preset-stage-3": "^7.0.0-beta.46",
    "@gen/rollup-plugin-generate-html": "^0.1.1",
    "autoprefixer": "^8.4.1",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^22.4.3",
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.11.0",
    "eslint-plugin-jest": "^21.15.1",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-promise": "^3.7.0",
    "eslint-plugin-standard": "^3.1.0",
    "globby": "^8.0.1",
    "husky": "^0.15.0-rc.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^22.4.3",
    "lint-staged": "^7.0.5",
    "ncp": "^2.0.0",
    "node-sass": "^4.9.0",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "rollup": "^0.58.2",
    "rollup-plugin-babel": "^4.0.0-beta.2",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^9.1.3",
    "rollup-plugin-copy": "^0.2.3",
    "rollup-plugin-eslint": "^4.0.0",
    "rollup-plugin-filesize": "^1.5.0",
    "rollup-plugin-fill-html": "^1.1.0",
    "rollup-plugin-livereload": "^0.6.0",
    "rollup-plugin-node-resolve": "^3.3.0",
    "rollup-plugin-rebase": "^1.1.0",
    "rollup-plugin-serve": "^0.4.2",
    "rollup-plugin-svelte": "^4.1.0",
    "rollup-plugin-uglify": "^3.0.0",
    "rollup-plugin-virtual": "^1.0.1",
    "stylelint": "^9.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-formatter-pretty": "^1.0.3",
    "stylelint-scss": "^3.1.0",
    "svelte": "^2.5.0"
  },
  "dependencies": {}
}
