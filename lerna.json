{
  "version": "2.2.1",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["*.md", "*.txt", "test/**"],
      "message": "chore(release): publish",
      "conventionalCommits": true
    }
  },
  "npmClientArgs": ["--no-package-lock"],
  "packages": [
    "packages/cli",
    "packages/components/*",
    "packages/configs",
    "packages/pos",
    "packages/store",
    "packages/styles",
    "packages/webpack"
  ]
}
