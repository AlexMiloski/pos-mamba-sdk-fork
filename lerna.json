{
  "version": "2.16.0",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": [
        "{.*,*}.{txt,md,yml}",
        "{!readme.md}",
        "{.*,*}{.config,rc,ignore}{,.js}",
        "LICENSE",
        "lerna.json"
      ],
      "message": "chore(release): :robot: publish",
      "conventionalCommits": true
    }
  },
  "npmClientArgs": [
    "--no-package-lock"
  ],
  "packages": [
    "packages/cli",
    "packages/components/*",
    "packages/configs",
    "packages/pos",
    "packages/styles",
    "packages/utils",
    "packages/webpack"
  ]
}
