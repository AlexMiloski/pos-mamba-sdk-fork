{
  "name": "@mamba/core-styles",
  "version": "0.0.1",
  "description": "Mamba core and reset styles",
  "license": "Apache-2.0",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "node-sass --output-style=compressed --precision=3 ./src/index.scss ./dist/styles.css",
    "postbuild": "ncp src/assets dist/assets",
    "watch": "node-sass -w src/index.scss -o dist/styles.css",
    "build:wsourcemap": "node-sass --output-style=compressed --precision=3 --source-map=dist/styles.map ./src/index.scss ./dist/styles.css",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "main": "dist/styles.css",
  "style": "dist/styles.css",
  "author": "Stone Payments - Mamba Team",
  "maintainers": [
    "Jaime Costa Marques"
  ],
  "repository": "https://github.com/stone-payments/pos-mamba-websdk.git",
  "dependencies": {
    "@mamba/styles-utils": "^0.0.1"
  },
  "devDependencies": {
    "ncp": "^2.0.0",
    "node-sass": "^4.7.2",
    "rimraf": "^2.6.2"
  }
}
