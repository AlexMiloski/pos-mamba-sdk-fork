{
  "compilerOptions": {
    /* Basic Options */
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2016"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "removeComments": true,

    /* Strict Type-Checking Options */
    "strict": true,

    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,

    /* Advanced Options */
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    /* Experimental Options */
    "preserveConstEnums": true,
    "experimentalDecorators": true,
    "pretty": true
  },
  "exclude": ["**/__mocks__/**/*", "**/__tests__/**/*", "**/lib/**/*"]
}
